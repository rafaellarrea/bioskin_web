
{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "api/whatsapp-chatbot.js": {
      "maxDuration": 60
    },
    "api/cron/daily-agenda.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-agenda",
      "schedule": "0 12 * * *"
    }
  ]
}
